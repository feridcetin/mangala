<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <!-- Ana içerik görünümü -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A67B5B">

        <TextView
            android:id="@+id/textView_store2"
            android:layout_width="80dp"
            android:layout_height="140dp"
            android:layout_margin="8dp"
            android:background="@drawable/store_background_player2"
            android:gravity="center"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="15" />

        <TextView
            android:id="@+id/textView_store1"
            android:layout_width="80dp"
            android:layout_height="140dp"
            android:layout_margin="8dp"
            android:background="@drawable/store_background_player1"
            android:gravity="center"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="15" />

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView_store1"
            app:layout_constraintStart_toEndOf="@+id/textView_store2"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Oyuncu 2 Cep Sırası -->
                <LinearLayout
                    android:id="@+id/player2_area"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/player_area_background_brown"
                    android:padding="8dp">

                    <Button
                        android:id="@+id/button_pocket12"
                        style="@style/MangalaPocketButton"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        tools:text="4" />
                    <Button
                        android:id="@+id/button_pocket11"
                        style="@style/MangalaPocketButton"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        tools:text="4" />
                    <Button
                        android:id="@+id/button_pocket10"
                        style="@style/MangalaPocketButton"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        tools:text="4" />
                    <Button
                        android:id="@+id/button_pocket9"
                        style="@style/MangalaPocketButton"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        tools:text="4" />
                    <Button
                        android:id="@+id/button_pocket8"
                        style="@style/MangalaPocketButton"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        tools:text="4" />
                    <Button
                        android:id="@+id/button_pocket7"
                        style="@style/MangalaPocketButton"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        tools:text="4" />
                </LinearLayout>

                <!-- Animasyon için taş sayısı göstergeleri -->
                <TextView
                    android:id="@+id/textView_sayi2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/pocket_background_oval_player2"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/textView_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:text="Sıra: Oyuncu 1"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView_sayi1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/pocket_background_oval_player1"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:layout_gravity="center_horizontal" />

                <!-- Oyuncu 1 Cep Sırası -->
                <LinearLayout
                    android:id="@+id/player1_area"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/player_area_background_green"
                    android:padding="8dp">

                    <Button
                        android:id="@+id/button_pocket0"
                        style="@style/MangalaPocketButton"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        tools:text="4" />
                    <Button
                        android:id="@+id/button_pocket1"
                        style="@style/MangalaPocketButton"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        tools:text="4" />
                    <Button
                        android:id="@+id/button_pocket2"
                        style="@style/MangalaPocketButton"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        tools:text="4" />
                    <Button
                        android:id="@+id/button_pocket3"
                        style="@style/MangalaPocketButton"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        tools:text="4" />
                    <Button
                        android:id="@+id/button_pocket4"
                        style="@style/MangalaPocketButton"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        tools:text="4" />
                    <Button
                        android:id="@+id/button_pocket5"
                        style="@style/MangalaPocketButton"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        tools:text="4" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Bu butonu artık gizlemedik, çünkü artık menüde yer alacak. Koddan kaldırılabilir veya visibility gone olarak kalabilir. -->
        <Button
            android:id="@+id/button_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sıfırla"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation View -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/main_menu" />

</androidx.drawerlayout.widget.DrawerLayout>